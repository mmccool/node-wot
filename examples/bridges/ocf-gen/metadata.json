// Auxiliary Metadata
//
// For each OCF resource type, list "inferred" data.
//
// The format here is intentionally similar to a WoT Thing Description.
//
// To keep things simple, for each OCF resource type there is
// one and only one "Property", and it is listed first.  After
// that, zero or more "Actions" and/or "Events" may be listed and will
// be added to any the TD if they are present.  
//
// Any top-level semantic tags given will be merged with others used
// by other resource types on the same device (duplicates will be 
// removed) 
{
   "oic.r.led": {
       "@type": ["http://iotschema.org/LightControl",
                 "http://iotschema.org/Actuator",
                 "http://iotschema.org/BinarySwitch"],
       "interaction": [
           {
               "name": "Switch Status",
               "@type": ["Property","http://iotschema.org/SwitchStatus"],
               "outputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean"
                          }
                      }
                  ]
               }
           },
           {
               "name": "Turn On",
               "@type": ["Action","http://iotschema.org/TurnOn"],
               "outputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean",
                              "value": true
                          }
                      }
                  ]
               }
           },
           {
               "name": "Turn Off",
               "@type": ["Action","http://iotschema.org/TurnOff"],
               "outputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean",
                              "value": false
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.colour.rgb": {
       "@type": ["http://iotschema.org/Light",
                 "http://iotschema.org/Actuator"],
       "interaction": [
           {
               "name": "Light Colour",
               "@type": ["Property","http://iotschema.org/CurrentColour"],
               "outputData": {
                   "type": "object",
                   "fields": [
                       {
                          "name": "rgbValue",
                          "value": {
                              "type": "array",
                              "items": [
                                  {
                                      "@type": ["http://iotschema.org/RColourData"],
                                      "type": "number"
                                  },
                                  {
                                      "@type": ["http://iotschema.org/GColourData"],
                                      "type": "number"
                                  },
                                  {
                                      "@type": ["http://iotschema.org/BColourData"],
                                      "type": "number"
                                  }
                              ]
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.sensor.motion": {
       "@type": ["http://iotschema.org/MotionControl",
                 "http://iotschema.org/Sensor"],
       "interaction": [
           {
               "name": "Motion Detected",
               "@type": ["Property","http://iotschema.org/MotionDetected"],
               "inputData": {
                   "type": "object",
                   "fields": [
                       {
                           "name": "value",
                           "value": {
                               "@type": ["http://iotschema.org/StateData"],
                               "type": "boolean"
                           }
                       }
                   ]
               }
           }
       ]
   },
   "oic.r.temperature": {
       "@type": ["http://iotschema.org/TemperatureSensing",
                 "http://iotschema.org/Sensor"],
       "interaction": [
           {
               "name": "Temperature",
               "@type": ["Property","http://iotschema.org/Temperature"],
               "inputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/TemperatureData"],
                              "type": "number"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.button": {
       "@type": ["http://iotschema.org/Sensor",
                 "http://iotschema.org/BinarySwitch"],
       "interaction": [
           {
               "name": "Switch Status",
               "@type": ["Property","http://iotschema.org/SwitchStatus"],
               "inputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.sensor.illuminance": {
       "@type": ["http://iotschema.org/IlluminanceSensing",
                 "http://iotschema.org/Sensor"],
       "interaction": [
           {
               "name": "Illuminance",
               "@type": ["Property","http://iotschema.org/Illuminance"],
               "inputData": {
                  "type": "object",
                  "fields": [
                      // should also be units here...
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/IlluminanceData"],
                              "type": "number"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.buzzer": {
       "@type": ["http://iotschema.org/Actuator",
                 "http://iotschema.org/BinarySwitch"],
       "interaction": [
           {
               "name": "Switch Status",
               "@type": ["Property","http://iotschema.org/SwitchStatus"],
               "outputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean"
                          }
                      }
                  ]
               }
           },
           {
               "name": "Turn On",
               "@type": ["Action","http://iotschema.org/TurnOn"],
               "outputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean",
                              "value": true
                          }
                      }
                  ]
               }
           },
           {
               "name": "Turn Off",
               "@type": ["Action","http://iotschema.org/TurnOff"],
               "outputData": {
                  "type": "object",
                  "fields": [
                      {
                          "name": "value",
                          "value": {
                              "@type": ["http://iotschema.org/Toggle"],
                              "type": "boolean",
                              "value": false
                          }
                      }
                  ]
               }
           }
       ]
   }
}
