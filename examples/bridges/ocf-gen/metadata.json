// Auxiliary Metadata
//
// For each OCF resource type, list "inferred" data.
//
// The format here is intentionally similar to a WoT Thing Description.
//
// To keep things simple, for each OCF resource type there is
// one and only one "Property", and it is listed first.  After
// that, zero or more "Actions" and/or "Events" may be listed and will
// be added to any the TD if they are present.  
//
// Any top-level semantic tags given will be merged with others used
// by other resource types on the same device (duplicates will be 
// removed) 
{
   "oic.r.led": {
       "@type": ["Light",
                 "iot:LightControl",
                 "iot:Actuator",
                 "iot:BinarySwitch"],
       "interaction": [
           {
               "name": "status",
               "@type": ["Property",
                         "OnOffState",
                         "iot:SwitchStatus"],
               "schema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean"
                          }
                      }
                  ]
               }
           },
           {
               "name": "on",
               "@type": ["Action",
                         "OnCommand",
                         "iot:TurnOn"],
               "inputSchema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean",
                              "value": "true"
                          }
                      }
                  ]
               }
           },
           {
               "name": "off",
               "@type": ["Action",
                         "OffCommand",
                         "iot:TurnOff"],
               "inputSchema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean",
                              "value": "false"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.colour.rgb": {
       "@type": ["Light",
                 "iot:Light",
                 "iot:Actuator"],
       "interaction": [
           {
               "name": "colour",
               "@type": ["Property",
                         "iot:CurrentColour"],
               "schema": {
                   "type": "object",
                   "field": [
                       {
                          "name": "rgbValue",
                          "schema": {
                              "type": "array",
                              "items": [
                                  {
                                      "@type": ["iot:RColourData"],
                                      "type": "number"
                                  },
                                  {
                                      "@type": ["iot:GColourData"],
                                      "type": "number"
                                  },
                                  {
                                      "@type": ["iot:BColourData"],
                                      "type": "number"
                                  }
                              ]
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.sensor.motion": {
       "@type": ["Motion",
                 "iot:MotionControl",
                 "iot:Sensor"],
       "interaction": [
           {
               "name": "motion",
               "@type": ["Property",
                         "Occupancy",
                         "iot:MotionDetected"],
               "schema": {
                   "type": "object",
                   "field": [
                       {
                           "name": "value",
                           "@type": ["iot:StateData"],
                           "schema": {
                               "type": "boolean"
                           }
                       }
                   ]
               }
           }
       ]
   },
   "oic.r.temperature": {
       "@type": ["Temperature",
                 "iot:TemperatureSensing",
                 "iot:Sensor"],
       "interaction": [
           {
               "name": "temperature",
               "@type": ["Property",
                         "MultiLevelState",
                         "iot:Temperature"],
               "schema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:TemperatureData"],
                          "schema": {
                              "type": "number"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.button": {
       "@type": ["Switch",
                 "iot:Sensor",
                 "iot:BinarySwitch"],
       "interaction": [
           {
               "name": "status",
               "@type": ["Property",
                         "OnOffState",
                         "iot:SwitchStatus"],
               "schema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.sensor.illuminance": {
       "@type": ["Meter",
                 "iot:IlluminanceSensing",
                 "iot:Sensor"],
       "interaction": [
           {
               "name": "illuminance",
               "@type": ["Property",
                         "MultiLevelState",
                         "iot:Illuminance"],
               "schema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:IlluminanceData"],
                          "schema": {
                              "type": "number"
                          }
                      }
                  ]
               }
           }
       ]
   },
   "oic.r.buzzer": {
       "@type": ["iot:Actuator",
                 "iot:BinarySwitch"],
       "interaction": [
           {
               "name": "status",
               "@type": ["Property",
                         "OnOffState",
                         "iot:SwitchStatus"],
               "schema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean"
                          }
                      }
                  ]
               }
           },
           {
               "name": "on",
               "@type": ["Action",
                         "OnCommand",
                         "iot:TurnOn"],
               "inputSchema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean",
                              "value": true
                          }
                      }
                  ]
               }
           },
           {
               "name": "off",
               "@type": ["Action",
                         "OffCommand",
                         "iot:TurnOff"],
               "inputSchema": {
                  "type": "object",
                  "field": [
                      {
                          "name": "value",
                          "@type": ["iot:Toggle"],
                          "schema": {
                              "type": "boolean",
                              "value": false
                          }
                      }
                  ]
               }
           }
       ]
   }
}
